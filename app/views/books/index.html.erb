<h1>Catalog</h1>
<p>Welcome to the eLibrary!</p>
<p>Cart: <%= @cart %></p>

<table class="listing" summary="Book list">
    <tr class="header">
      <th>ID</th>
      <th>Title</th>
      <th>Available</th>
      <th>Checked Out</th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.id %></td>
      <td><%= book.title %></td>
      <td><%= book.available? %></td>
      <td><%= book.date_time_checked_out%></td>
      <td><%= button_to("Add to Cart", { :action => "edit", :id => book.id }, :method => :get)%></td>
    </tr>
    <% end %>
  </table>
